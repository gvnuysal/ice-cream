<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Gvn.IceCream.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Gvn.IceCream.MAUI" 
    xmlns:pages="clr-namespace:Gvn.IceCream.MAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="IceCream">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->
    <!--<ShellContent ContentTemplate="{DataTemplate pages:OnboardingPage}"/>-->
    <TabBar>
        <ShellContent Title="Home"
                          ContentTemplate="{DataTemplate pages:HomePage}"
                          Route="HomePage"
                          Icon="home"/>

        <ShellContent Title="Cart"
              ContentTemplate="{DataTemplate pages:CardPage}"
              Route="CardPage"
              Icon="card"/>

        <ShellContent Title="Profile"
              ContentTemplate="{DataTemplate pages:ProfilePage}"
              Route="ProfilePage"
              Icon="user"/>

    </TabBar>

</Shell>
